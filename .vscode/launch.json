    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ReactJS",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS",
            "program": "${workspaceFolder}/backend/dist/main.js",
            "cwd": "${workspaceFolder}/backend",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}